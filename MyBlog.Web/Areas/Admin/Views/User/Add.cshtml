@model UserAddDto

<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcı Ekle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-controller="User" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" style="color:red"></div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label">Kullanıcı Adı</label>
                            <input asp-for="FirstName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Kullanıcının adı giriniz." aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="form-label">Kullanıcı Soyadı</label>
                            <input asp-for="LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Kullanıcının soyadını giriniz." aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Kullanıcı Email Adresi</label>
                            <input asp-for="Email" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="Kullanıcının Email adresini giriniz." aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">Kullanıcı Telefon Numarası</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control mb-3" id="defaultFormControlInput" placeholder="Kullanıcının telefon numarasını giriniz." aria-describedby="defaultFormControlHelp">
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="RoleId" class="form-label">Kullanıcı Rolü</label>
                            <select asp-for="RoleId" class="form-control mb-3" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Kullanıcı Şifresi</label>
                            <input asp-for="Password" type="password" class="form-control mb-3" id="defaultFormControlInput" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="LinkedInLink" class="form-label">LinkedIn Link (OPSIYONEL)</label>
                            <input asp-for="LinkedInLink" type="text" class="form-control" type="text" autofocus="">
                        </div>
                        <div class="form-group">
                            <label asp-for="InstagramLink" class="form-label">Instagram Link (OPSIYONEL)</label>
                            <input asp-for="InstagramLink" type="text" class="form-control" type="text" autofocus="">
                        </div>
                        <div class="form-group">
                            <label asp-for="ContactMail" class="form-label">Github Link (OPSIYONEL)</label>
                            <input asp-for="ContactMail" type="text" class="form-control" type="text" autofocus="">
                        </div>
                        <div class="form-group">
                            <label asp-for="GithubLink" class="form-label">Github Link (OPSIYONEL)</label>
                            <input asp-for="GithubLink" type="text" class="form-control" type="text" autofocus="">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Ekle</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>

    </div>


</div>